div#map.map(style="height: 100vh; width: 100%; z-index: 0")
div#drawTools.shadow.rounded(style = "position: absolute; left: 20px; top: 80px;")
    div.list-group.p-1
        a#undo.list-group-item.list-group-item-action.text-center.p-2(href="#" style="background-color:rgba(0,60,136,.5);" title="Desfazer alterações")
            img(src="/assets/arrow-counterclockwise.svg" alt="" width="15" height="15")
        a#redo.list-group-item.list-group-item-action.text-center.p-2(href="#" style="background-color:rgba(0,60,136,.5);" title="Refazer alterações")
            img(src="/assets/arrow-clockwise.svg" alt="" width="15" height="15")
        a#clear.list-group-item.list-group-item-action.text-center.p-2(href="#" style="background-color:rgba(0,60,136,.5);" title="Limpar todos os desenhos")
            img(src="/assets/Trash.svg" alt="" width="15" height="15")
        a#center.list-group-item.list-group-item-action.text-center.p-2(href="#" style="background-color:rgba(0,60,136,.5);" title="Ir até a localização atual")
            img(src="/assets/house-door.svg" alt="" width="15" height="15")
    div(hidden)
        small#latitude
        small#longitude.ml-3